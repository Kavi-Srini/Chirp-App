<p id="notice"><%= notice %></p>

<h1>Chirps</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Messages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chirps.each do |chirp| %>
      <tr>
          <td>
            <% if chirp.user.avatar.attached? %>
                    <%= image_tag (chirp.user.avatar.variant(resize_to_limit: [50,50]))%>
                  <% else %>
                    <%= image_tag("default_avatar.png", :size=>"50x50")%> 
                  <% end%>
          </td>
          <td>@<%= link_to chirp.user.username, show_user_path(id: chirp.user.id) %></td> 
          <td><%= chirp.message.html_safe %></td>
          <td><%= link_to 'Show', chirp %></td>
          <%if user_signed_in? && current_user.id == chirp.user.id %>
            <td><%= link_to 'Edit', edit_chirp_path(chirp) %></td>
            <%end%>
          <td><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

